# logrotate file for overpass logs - four files are handled
# compress is global

compress
nomail

$DB_DIR/logs/update_op_db.log $DB_DIR/logs/op_area_update.log $DB_DIR/getdiff/getdiff.log {

    su overpass overpass
    rotate 5
    size 100K
    missingok
    notifempty
}

$DB_DIR/transactions.log {

    su overpass overpass
    rotate 5
    size 200K
    missingok
    notifempty
}
